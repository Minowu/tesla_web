{
  "name": "thadorobot-3d-website",
  "version": "3.0.0",
  "description": "Website 3D tương tác hiện đại showcase sản phẩm robot công nghiệp Thadorobot với React Three Fiber",
  "type": "module",
  "main": "src/index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview",
    "start": "vite",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,html}",
    "analyze": "vite-bundle-analyzer",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "threejs",
    "react-three-fiber",
    "3d",
    "robot",
    "industrial",
    "automation",
    "thadorobot",
    "web3d",
    "interactive",
    "modern",
    "react",
    "typescript",
    "vite",
    "gsap",
    "framer-motion"
  ],
  "author": "Thadorobot Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thadorobot/3d-website.git"
  },
  "bugs": {
    "url": "https://github.com/thadorobot/3d-website/issues"
  },
  "homepage": "https://thadorobot.com",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@react-three/fiber": "^8.15.0",
    "@react-three/drei": "^9.88.0",
    "@react-three/postprocessing": "^2.15.0",

    "three": "^0.158.0",
    "gsap": "^3.12.2",
    "framer-motion": "^10.16.4",
    "@types/three": "^0.158.0",
    "zustand": "^4.4.0",
    "react-router-dom": "^6.8.0",
    "lenis": "^1.0.42"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-glsl": "^1.1.0",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-bundle-analyzer": "^0.7.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^6.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "vite": {
    "root": "src",
    "build": {
      "outDir": "../dist",
      "assetsDir": "assets",
      "sourcemap": true,
      "rollupOptions": {
        "input": {
          "main": "index.html"
        }
      }
    },
    "server": {
      "port": 3000,
      "open": true
    },
    "preview": {
      "port": 4173
    }
  }
} 
